                </ContentControl>
            </UniformGrid>


            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image
                    x:Name="Image"
                    Grid.Row="0"
                    Margin="10"
                    Style="{StaticResource FantImageStyle}" />
            </Grid>
            <Button
                x:Name="btnOk"
                Grid.Row="5"
                Height="{StaticResource DownButtonHeight}"
                Background="{StaticResource TopBrush}"
                Content="OK"
                Foreground="White"
                Style="{StaticResource Button-Sketch}" />

        </Grid>
    </Border>



</Window>
