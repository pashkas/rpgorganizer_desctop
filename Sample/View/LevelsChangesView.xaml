                                    <TransformGroup>
                                        <TransformGroup.Children>
                                            <RotateTransform Angle="180" />
                                            <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                        </TransformGroup.Children>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                    </Viewbox>

                </ContentControl>
                <ContentControl
