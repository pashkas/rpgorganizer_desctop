<Window x:Class="Sample.View.PassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите пароль для доступа к программе"
        Width="480"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen" UseLayoutRounding="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="passBox"
                 VerticalContentAlignment="Center"
                 Style="{StaticResource TextBox-Sketch}"
                 TextAlignment="Center" />
        <UniformGrid Grid.Row="1"
                     Height="{StaticResource DownButtonHeight}"
                     Rows="1">
            <Button x:Name="btnOk"
                    Content="Ок"
                    Style="{StaticResource Button-Sketch}" />
            <Button x:Name="btnCansel"
                    Content="Закрыть"
                    Style="{StaticResource Button-Sketch}" />
        </UniformGrid>
    </Grid>
</Window>
