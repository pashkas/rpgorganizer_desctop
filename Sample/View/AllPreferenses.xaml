                        </DockPanel>-->

                        <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Dock="Top">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Макс. уровень" />
                            <xctk:AutoSelectTextBox
                                Margin="0,0,17,0"
                                Style="{StaticResource PropertyAutoSellectTextBoxStyle}"
                                Text="{Binding MaxAbLev, UpdateSourceTrigger=PropertyChanged}" />
                        </DockPanel>-->
                        <ItemsControl
                            Margin="2"
                            ItemsSource="{Binding AbRangs}"
                            Template="{StaticResource ScrollItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <!--<ColumnDefinition Width="*" />-->
                                        </Grid.ColumnDefinitions>
                                        <xctk:AutoSelectTextBox
                                            MinWidth="0"
                                            MinHeight="20"
                                            Margin="1"
                                            Style="{StaticResource PropertyAutoSellectTextBoxStyle}"
                                            Text="{Binding Name}"
                                            TextAlignment="Center" />
                                        <!--<xctk:AutoSelectTextBox
                                            Grid.Column="1"
                                            MinWidth="0"
                                            MinHeight="20"
                                            Margin="1"
                                            Style="{StaticResource PropertyAutoSellectTextBoxStyle}"
                                            Text="{Binding Smart}"
                                            TextAlignment="Center" />-->
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DockPanel>
                </TabItem>

                <!--  Region (Баланс игры)  -->
                <TabItem
                    Header="Баланс игры"
                    HeaderTemplate="{StaticResource Group-box-sketch}"
                    Visibility="Collapsed">
                    <ScrollViewer
                        HorizontalScrollBarVisibility="Disabled"
                        Style="{StaticResource ScrollViewer-Sketch}"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Фиксированный максимальный уровень персонажа?" />
                                <CheckBox VerticalAlignment="Center"
                                          IsChecked="{Binding IsFixMaxPLevel}"
                                          ToolTip="Если галочка стоит, то ты указываешь максимальный уровень персонажа, а если нет - то скорость получения опыта." />
                            </DockPanel>

                            -->
