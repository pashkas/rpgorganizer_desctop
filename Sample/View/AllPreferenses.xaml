<Window
    x:Class="Sample.View.AllPreferenses"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:Sample.Behavior"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Sample.Model"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Общие настройки"
    d:DesignHeight="1300"
    mc:Ignorable="d">
    <Window.Resources>
        <model:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <model:MultiBoolToVisibleConverter x:Key="MultiBoolToVisibleConverter" />
        <model:StringToColorConverter x:Key="StringToColorConverter" />
        <ControlTemplate x:Key="ScrollItems">
            <ScrollViewer
                FocusVisualStyle="{x:Null}"
                HorizontalScrollBarVisibility="Disabled"
                Style="{StaticResource ScrollWithoutBorder}"
                VerticalScrollBarVisibility="Auto">
                <i:Interaction.Behaviors>
                    <behavior:VerticalScrollBehavior2 />
                </i:Interaction.Behaviors>
                <ItemsPresenter Margin="1" FocusVisualStyle="{x:Null}" />
            </ScrollViewer>
        </ControlTemplate>
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="OpaBacground" />
    </Window.Background>
    <Window.Style>
        <StaticResource ResourceKey="FullWindowStyle" />
    </Window.Style>
    <i:Interaction.Behaviors>
        <behavior:FullWindowBehavior />
        <behavior:PlayEditBehavior />
        <behavior:PlayCloseBehavior />
    </i:Interaction.Behaviors>
    <Border Style="{StaticResource ToolBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TabControl Grid.Row="0" Margin="2">

                <!--  Общие настройки  -->
                <TabItem Header="Общие настройки" HeaderTemplate="{StaticResource Group-box-sketch}">
                    <ScrollViewer
                        HorizontalScrollBarVisibility="Disabled"
                        Style="{StaticResource ScrollViewer-Sketch}"
                        VerticalScrollBarVisibility="Auto">
                        <Grid Margin="5">
                            <StackPanel>
                                <!--  Макс. уровень  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="Collapsed">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Макс. уровень персонажа" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding MaxPersLevelProperty}" />
                                </DockPanel>

                                <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Путь к библиотеке Graphviz" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding PathToGraphviz}" />
                                </DockPanel>-->

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Папка с файлом персонажа" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding PathToPers}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Папка для импорта/экспорта с телефона" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding PathToDrop}" />
                                </DockPanel>

                                <!--  Характеристики  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Не показывать характеристики в главном окне" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsNotShowCharacteristicsInMain}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock
                                        FontWeight="Bold"
                                        Style="{StaticResource PropertyNameStyle}"
                                        Text="Колонок характеристик в главном окне" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding ColumnsOfCharacteristicsInMain}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock
                                        FontWeight="Bold"
                                        Style="{StaticResource PropertyNameStyle}"
                                        Text="Глобальный бустер навыков" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding GlobalBooster}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="Collapsed">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Длительность pomodoro, мин." />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding PomodorroTime}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="Collapsed">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Путь к dropbox" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding PathToDropbox}" />
                                </DockPanel>

                                <!--  10 уровней навыков  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Навыки 10 уровней" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding Is10AbLevels}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="5 уровней характеристик и навыков, 50 уровень персонажа" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding Is5_5_50}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Режим FUDGE" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsFUDGE}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Режим без навыков" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsNoAbs}" />
                                </DockPanel>

                                <!--  Не показывать оповещения опыта и навыков  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Не показывать оповещения опыта и навыков" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsNotShowNotifications}" />
                                </DockPanel>

                                <!--  Отключение звуков  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Отключить звуки?" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding DisableSounds}" />
                                </DockPanel>

                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Тач курсор?" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsNotOwerriteCursor}" />
                                </DockPanel>

                                <!--  Защита паролем  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Защита паролем?" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsPassProtectProperty}" />
                                </DockPanel>

                                <!--  Пароль  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <DockPanel.Visibility>
                                        <MultiBinding Converter="{StaticResource MultiBoolToVisibleConverter}" ConverterParameter="пароль">
                                            <Binding Path="IsPassProtectProperty" />
                                        </MultiBinding>
                                    </DockPanel.Visibility>
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Пароль" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding PassProperty}" />
                                </DockPanel>

                                <!--  Режим HOMM  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="Collapsed">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Режим HOMM?" />
                                    <CheckBox
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding HOMMModeProperty}"
                                        ToolTip="Режим Heroes Of Might And Magic - в конце дня нужно нажмимать кнопку 'завершить ход'. Отключается режим свободного выбора даты." />
                                </DockPanel>

                                <!--  Активировать звания  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="Collapsed">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Активировать звания персонажа?" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsActtivateRangse}" />
                                </DockPanel>

                                <!--  Показывать заставку при запуске  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Заставка при запуске?" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding ShowSplashesProperty}" />
                                </DockPanel>

                                <StackPanel>
                                    <StackPanel.Visibility>
                                        <MultiBinding Converter="{StaticResource MultiBoolToVisibleConverter}" ConverterParameter="настройкиЗаставки">
                                            <Binding Path="ShowSplashesProperty" />
                                        </MultiBinding>
                                    </StackPanel.Visibility>

                                    <!--  Время показа заставки  -->
                                    <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                        <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Время показа, млс." />
                                        <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding TimeShowSplashProperty}" />
                                    </DockPanel>

                                    <!--  Картинка из папки  -->
                                    <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                        <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Пользовательские заставки?" />
                                        <CheckBox VerticalAlignment="Center" IsChecked="{Binding ShowSplashesFromFolderProperty}" />
                                    </DockPanel>

                                    <StackPanel>
                                        <StackPanel.Visibility>
                                            <MultiBinding Converter="{StaticResource MultiBoolToVisibleConverter}" ConverterParameter="настройкиПользовательскойЗаставки">
                                                <Binding Path="ShowSplashesFromFolderProperty" />
                                            </MultiBinding>
                                        </StackPanel.Visibility>

                                        <!--  Путь к папке  -->
                                        <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Путь к папке с заставками" />
                                            <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding SplashesFolderProperty}" />
                                        </DockPanel>

                                        <!--  Имя файла  -->
                                        <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Показывать имя файла?" />
                                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding ShowFileSplashNameProperty}" />
                                        </DockPanel>
                                    </StackPanel>
                                </StackPanel>

                                <!--  Мотиваторы  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="Collapsed">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Мотиватор после завершения задач?" />
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsTaskDoneMotivatorShowProperty}" />
                                </DockPanel>

                                <!--  Путь  -->
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <DockPanel.Visibility>
                                        <MultiBinding Converter="{StaticResource MultiBoolToVisibleConverter}" ConverterParameter="настройкиМотиватора">
                                            <Binding Path="IsTaskDoneMotivatorShowProperty" />
                                        </MultiBinding>
                                    </DockPanel.Visibility>

                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Путь к папке с мотиваторами" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding PathToMotivatorsProperty}" />
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!--<TabItem Header="Поведение" HeaderTemplate="{StaticResource Group-box-sketch}">
                    <StackPanel>
                -->
                <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                            <TextBlock Style="{StaticResource PropertyNameStyle}"
                                       Text="Квесты со связанными навыками неактивными, если их задачи выполнены" />
                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsHideQwestsFromAbLink}" />
                        </DockPanel>-->

                <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Активировать HP" />
                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsHP}" />
                        </DockPanel>-->

                <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
