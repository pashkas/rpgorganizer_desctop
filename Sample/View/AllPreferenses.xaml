                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="{Binding IsFixMaxPLevel, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Максимальный уровень персонажа" />
                                <xctk:AutoSelectTextBox MinWidth="0"
