                <TabItem
                    Header="Ранги характеристик"
                    HeaderTemplate="{StaticResource Group-box-sketch}"
                    Visibility="Collapsed">
                    <DockPanel Margin="20,5,5,5">
                        <!--  Число уровней характеристик  -->
                        <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Dock="Top">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Макс. уровень" />
                            <xctk:AutoSelectTextBox
                                Margin="0,0,17,0"
                                Style="{StaticResource PropertyAutoSellectTextBoxStyle}"
                                Text="{Binding MaxChaLev, UpdateSourceTrigger=PropertyChanged}" />
                        </DockPanel>-->
                        <ItemsControl
                            Margin="2"
                            ItemsSource="{Binding CharacteristicRangs}"
                            Template="{StaticResource ScrollItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <xctk:AutoSelectTextBox
                                        MinWidth="0"
                                        MinHeight="20"
                                        Margin="1"
                                        Style="{StaticResource PropertyAutoSellectTextBoxStyle}"
                                        Text="{Binding Name}"
                                        TextAlignment="Center" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DockPanel>
                </TabItem>

                <TabItem
                    Header="Ранги навыков"
                    HeaderTemplate="{StaticResource Group-box-sketch}"
                    Visibility="Collapsed">
                    <DockPanel Margin="20,5,5,5">
                        <!--  Число уровней скиллов  -->
                        <!--<DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Dock="Top">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Очков навыков за уровень" />
