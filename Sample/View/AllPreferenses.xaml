                            <!--  ТЕС опыт  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}" Visibility="Collapsed">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Опыт в стиле ТЕС?" />
                                <CheckBox
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsTesExp}"
                                    ToolTip="Все навыки делятся на три группы в зависимости от влияния на характеристики: основные, важные и второстепенные. И в соответствии с этим определяется опыт." />
                            </DockPanel>

                            <!--  Активировать очки здоровья  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Активировать очки здоровья?" />
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsHPActiveteProperty}" />
                            </DockPanel>

                            <!--  Region (Очков скиллов на первом уровне)  -->
                            <StackPanel>
                                <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                    <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Очков навыков на первом уровне" />
                                    <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding AbPointsForFirstLevel}" />
                                </DockPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <!--  EndRegion  -->

                <!--  Квесты  -->
                <TabItem
                    Header="Квесты"
                    HeaderTemplate="{StaticResource Group-box-sketch}"
                    Visibility="Collapsed">
                    <ScrollViewer Style="{StaticResource ScrollViewer-Sketch}" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!--  Автоактивность квестов  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Автоактивность квестов?" />
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsQwestAutoActiveForDefoultProperty}" />
                            </DockPanel>

                            <!--  Макс. уровень  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Максимальный уровень для новых квестов?" />
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding MaxLevelToNewQwestsProperty}" />
                            </DockPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!--  Характеристики  -->
                <TabItem
                    Grid.Row="0"
                    Grid.Column="0"
                    Header="Характеристики"
                    HeaderTemplate="{StaticResource Group-box-sketch}"
                    Visibility="Collapsed">
                    <ScrollViewer Style="{StaticResource ScrollViewer-Sketch}" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!--  Макс. уровень  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Максимальный уровень характеристик" />
                                <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding MaxCharactLevelProperty}" />
                            </DockPanel>

                            <!--  Показывать в главном окне  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Показывать характеристики в главном окне?" />
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding ShowCharacteristicsInMainWindowProperty}" />
                            </DockPanel>

                            <!--  Показывать картинки  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Показывать картинки характеристик в главном окне?" />
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsChaPicMainWindowEnabledProperty}" />
                            </DockPanel>

                            <!--  Ранги характеристик  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Ранги характеристик" />
                                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding CharactRangsForDefoultProperty}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding LevelRang}"
                                            Header="Уровень" />
                                        <DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding NameOfRang}"
                                            Header="Название" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>

                            <!--  Обновить ранги  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="" />
                                <Button
                                    x:Name="btnChaRangsRefresh"
                                    Height="{StaticResource ToolButtonHeight}"
                                    Background="White"
                                    Click="BtnChaRangsRefresh_OnClick"
                                    Content="Обновить ранги всех характеристик..."
                                    Style="{StaticResource Button-Sketch}" />
                            </DockPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!--  скиллы  -->
                <TabItem
                    Header="Навыки"
                    HeaderTemplate="{StaticResource Group-box-sketch}"
                    Visibility="Collapsed">
                    <ScrollViewer Style="{StaticResource ScrollViewer-Sketch}" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!--  Макс. уровень  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Макс. уровень навыков" />
                                <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding AbilMaxLevelProperty}" />
                            </DockPanel>

                            <CheckBox
                                Margin="{StaticResource CheckBoxMargin}"
                                Content="-показывать название групп навыков?"
                                IsChecked="{Binding IsShowAbGroupNameProperty}"
                                Style="{StaticResource CheckBox-Sketch}"
                                Visibility="Collapsed" />

                            <!--  Ранги скиллов  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Ранги навыков" />
                                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding AbilRangsForDefoultProperty}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding LevelRang}"
                                            Header="Уровень" />
                                        <DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding NameOfRang}"
                                            Header="Название" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>

                            <!--  Обновить  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="" />
                                <Button
                                    x:Name="btnRangsAbRefresh"
                                    Height="{StaticResource ToolButtonHeight}"
                                    Background="White"
                                    Click="BtnRangsAbRefresh_OnClick"
                                    Content="Обновить ранги всех навыков..."
                                    Style="{StaticResource Button-Sketch}" />
                            </DockPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!--  Задачи  -->
                <TabItem
                    Header="Задачи"
                    HeaderTemplate="{StaticResource Group-box-sketch}"
                    Visibility="Collapsed">
                    <ScrollViewer Style="{StaticResource ScrollViewer-Sketch}" VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!--  Автофокус  -->
                            <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                                <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Активировать автофокус?" />
                                <CheckBox
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsAutofocusEnabledProperty}"
                                    ToolTip="Выполненные задачи переносятся в конец списка, пропущенные в начало." />
                            </DockPanel>

                            <StackPanel />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!--  Награды  -->
                <!--  EXTENDEDVERS  -->
                <TabItem Header="Награды" HeaderTemplate="{StaticResource Group-box-sketch}">
                    <StackPanel>
                        <!--  оч. редко  -->
                        <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Очень редкая вероятность появления" />
                            <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding OchRedcoRevardProperty}" />
                        </DockPanel>

                        <!--  Редкая  -->
                        <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Редкая вероятность появления" />
                            <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding RedcoRewardProperty}" />
                        </DockPanel>

                        <!--  Норм  -->
                        <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Нормальная вероятность появления" />
                            <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding NormRevardProperty}" />
                        </DockPanel>

                        <!--  Частая вероятность появления  -->
                        <DockPanel Margin="{StaticResource PropertyDockPanelMargin}">
                            <TextBlock Style="{StaticResource PropertyNameStyle}" Text="Частая вероятность появления" />
                            <xctk:AutoSelectTextBox Style="{StaticResource PropertyAutoSellectTextBoxStyle}" Text="{Binding OftenRewardProperty}" />
                        </DockPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <Button
                x:Name="btnOk"
                Grid.Row="1"
                Height="{StaticResource DownButtonHeight}"
                Background="{StaticResource TopBrush}"
                Content="Ok"
                Foreground="White"
                Style="{StaticResource Button-Sketch}" />
        </Grid>
    </Border>
</Window>