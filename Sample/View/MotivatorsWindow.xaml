<Window x:Class="Sample.View.MotivatorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MotivatorsWindow" AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None" UseLayoutRounding="True">
    <Border Margin="60" Background="{StaticResource PaperTexture}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock  Text="Так держать!" TextAlignment="Center" Style="{StaticResource TextBlock-Sketch}" Margin="10,10,10,0" FontSize="25" />
            <Image VerticalAlignment="Center" Grid.Row="1" HorizontalAlignment="Center" x:Name="Image" Margin="10" />
            <Button Style="{StaticResource Button-Sketch}" Grid.Row="2" Height="{StaticResource DownButtonHeight}" Background="{StaticResource TopBrush}" Foreground="White" Content="ОК" Click="ButtonBase_OnClick" />
        </Grid>
        
    </Border>
</Window>
